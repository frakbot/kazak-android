<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Session" parent="None">
        <item name="android:paddingTop">@dimen/session_spacing_vertical</item>
        <item name="android:paddingBottom">@dimen/session_spacing_vertical</item>
        <item name="android:paddingLeft">@dimen/session_spacing_horizontal</item>
        <item name="android:paddingRight">@dimen/session_spacing_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Session.Title" parent="None">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Session.SubTitle" parent="None">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Session.Description" parent="None">
        <item name="android:layout_marginTop">@dimen/session_spacing_vertical</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>
