<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="Ruler">

    <attr name="android:textSize" />

    <attr name="android:textColor" />

  </declare-styleable>

  <declare-styleable name="BoundsRuler">

    <attr name="tickSize"
      format="dimension|reference" />

    <attr name="tickStrokeWidth"
      format="dimension|reference" />

    <attr name="tickColor"
      format="color|reference" />

    <attr name="skipLabels"
      format="integer|reference" />

  </declare-styleable>

  <attr name="rulerDefaultStyle"
    format="reference" />

  <attr name="boundsRulerDefaultStyle"
    format="reference" />

</resources>
