<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="Ruler">

    <attr name="android:textSize" />

    <attr name="android:textColor" />

    <attr name="tickSize"
      format="dimension|reference" />

    <attr name="tickStrokeWidth"
      format="dimension|reference" />

    <attr name="tickColor"
      format="color|reference" />

    <!-- keep in sync with Ruler.Orientation -->
    <attr name="orientation"
      format="enum|reference">
      <enum name="horizontal"
        value="0" />
      <enum name="vertical"
        value="1" />
    </attr>

    <!-- keep in sync with Ruler.AlignLabel -->
    <attr name="alignLabel"
      format="enum|reference">
      <enum name="onTick"
        value="0" />
      <enum name="betweenTicks"
        value="1" />
    </attr>

  </declare-styleable>

  <attr name="rulerDefaultStyle"
    format="reference" />

  <!-- enum constants for referencing -->

  <integer name="ruler_orientation_horizontal">0</integer>
  <integer name="ruler_orientation_vertical">1</integer>

  <integer name="ruler_align_label_on_tick">0</integer>
  <integer name="ruler_align_label_between_ticks">1</integer>

</resources>
